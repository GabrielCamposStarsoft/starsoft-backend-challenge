{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "setupFiles": ["<rootDir>/setup-messaging.ts"],
  "testEnvironment": "node",
  "testRegex": "\\.messaging-spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/../src/$1"
  },
  "testTimeout": 60000,
  "verbose": true
}
